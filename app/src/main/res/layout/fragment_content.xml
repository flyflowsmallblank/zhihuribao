<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ContentFragment">

    <WebView
        android:id="@+id/frag_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:translationZ="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/frag_content_back"
            android:src="@drawable/icon_back"
            android:layout_marginTop="17sp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="ä¸¨"
            android:textSize="30dp"
            android:layout_marginTop="8sp"
            android:layout_marginStart="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/frag_content_comment"
            android:src="@drawable/icon_comment"
            android:layout_marginTop="20sp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/frag_content_comment_size"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/frag_content_good"
            android:src="@drawable/icon_good"
            android:layout_marginTop="17sp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/frag_content_good_size"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/frag_content_collect"
            android:src="@drawable/icon_collect"
            android:layout_marginTop="17sp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/frag_content_share"
            android:src="@drawable/icon_share"
            android:layout_marginTop="17sp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>